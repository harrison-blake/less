<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center px-4">
  <div class="w-full max-w-xl bg-white rounded-2xl shadow-xl p-10">
    <h2 class="text-3xl font-bold text-indigo-700 mb-8 text-center">Edit Profile</h2>

    <%= form_with model: @user, url: profile_path, method: :patch, local: true do |f| %>
      <div class="mb-6">
        <%= f.label :name, class: "block text-lg text-gray-800 mb-2" %>
        <%= f.text_field :name, class: "w-full p-3 border-2 border-gray-400 rounded-xl" %>
      </div>

      <div class="mb-6">
        <%= f.label :phone, class: "block text-lg text-gray-800 mb-2" %>
        <%= f.telephone_field :phone, class: "w-full p-3 border-2 border-gray-400 rounded-xl" %>
      </div>

      <div class="mb-6">
        <%= f.label :city, class: "block text-lg text-gray-800 mb-2" %>
        <%= f.text_field :city, class: "w-full p-3 border-2 border-gray-400 rounded-xl" %>
      </div>

      <div class="mb-6">
        <%= f.label :state, class: "block text-lg text-gray-800 mb-2" %>
        <%= f.text_field :state, class: "w-full p-3 border-2 border-gray-400 rounded-xl" %>
      </div>

      <div class="mb-6">
        <%= f.label :zip, class: "block text-lg text-gray-800 mb-2" %>
        <%= f.text_field :zip, class: "w-full p-3 border-2 border-gray-400 rounded-xl" %>
      </div>

      <div>
        <%= f.submit "Save Changes", class: "w-full text-xl font-bold py-4 px-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl" %>
      </div>
    <% end %>
  </div>
</div>
